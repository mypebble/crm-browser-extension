{
    "manifest_version": 2,
    "name": "Magni Browser Extension",
    "version": "1.0",
    "description": "The official Magni browser extension adds super-powers to the Magni CRM",
    "icons": {
        "48": "icons/app-48.png"
    },
    "permissions": [
        "https://mail.google.com/",
        "https://inbox.google.com/",
        "{{ crm_location }}/"
    ],
    "content_scripts": [
        {
            "matches": ["https://mail.google.com/*", "https://inbox.google.com/*"],
            "js": [
                "extern/inboxsdk.js",
                "js/gmail.js"
            ]
        },
        {
            "matches": ["{{ crm_location }}/sidebar*"],
            "js": [
                "js/sidebar.js"
            ],
            "all_frames": true
        }
    ],
    "background": {
        "scripts": ["js/background.js"],
        "persistent": false
    },
    "web_accessible_resources" : ["icons/app-48.png", "icons/app-13.png"]
}
